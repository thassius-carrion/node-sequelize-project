<h1>Editando: {{user.name}}</h1>

<form action="/users/update" method="post" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o nome" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissao:</label>
        <input type="text" name="occupation" placeholder="Digite a profissao" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
        {{else}}
            <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promocoes?</label>   
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endere√ßos:</h2>
    <form action="/address/create" method="post">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite a rua">
        </div>
            <div class="form-control">
            <label for="number">Numero:</label>
            <input type="text" name="number" placeholder="Digite o numero">
        </div>
            <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite a cidade">
        </div>
        <input type="submit" value="Incluir Endereco">
    </form>
    <div class="address-list">
        <h2>Lista de Enderecos:</h2>
        {{#each user.Addresses}}
            <div>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}
                <form action="/address/delete" method="post">
                <input type="hidden" name="UserId" value="{{this.UserId}}">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>
</div>